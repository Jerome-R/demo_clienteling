{% extends "AppBundle::layout.html.twig" %}

{% block content %}
	<div class="col-xs-12">
	<h3>Historique des exports Top Clients</h3>

		<div>
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Date</th>
						<th>Utilisateur</th>
						<!--th>Requête</th-->
					</tr>
				</thead>
				<tbody>
					{% for export in exports %}
						<tr>
							<td>le {{ export.createdAt|date('d/m/Y à H:i') }}</td>
							<td>{{ export.user }}</td>
							<!--td style="word-wrap: break-word;
								-webkit-hyphens: none;
								-moz-hyphens: none;
								-ms-hyphens: none;
								-o-hyphens: none;
								hyphens: none;">{{ export.request }}</td-->
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
