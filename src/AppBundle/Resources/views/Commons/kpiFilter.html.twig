<div class="col-xs-12 hidden-print">
	<h3 class="gris">Sélectionner les données à afficher (Boutique / Date) :</h3>
		{{ form_start(form, { 'attr': {'id' : 'clients-filter'} }) }}

		<div class="form-group">

			<div class="col-xs-6">
				{{ form_widget(form.boutique, { 'attr': {'class' : 'form-control ajax', 'isSubmit': 'no'} }) }}					
			</div>
			<div class="col-xs-3">
				{{ form_widget(form.year, { 'attr': {'class' : 'form-control ajax', 'isSubmit': 'no'} }) }}					
			</div>

			<div class="col-xs-3">
				{% if app.request.attributes.get('_route') == 'app_top_client_index' %}
				{{ form_widget(form.submit, {'attr': {'class': 'btn big-action-orange-btn hidden'}, 'label' : 'Filtrer'|trans}) }}
				{% else %}
				{{ form_widget(form.submit, {'attr': {'class': 'btn big-action-gray-btn'}, 'label' : 'Filtrer' }) }}
				{% endif %}
			</div>
			
			<div class="col-xs-6 text-right">
				{% if app.request.attributes.get('_route') in ['app_kpi_ytd_nlocaux','app_kpi_ytd_locaux'] %}<h4>De Janvier à :</h4>{% endif %}
			</div>
			
			<div class="col-xs-3">
				{{ form_widget(form.month, { 'attr': {'class' : 'form-control ajax', 'isSubmit': 'no'} }) }}			
			</div>

		</div>

		{{ form_end(form) }}	
</div>